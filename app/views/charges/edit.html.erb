
<h3><%= @plan_name %></h3>
<% if @subscription_status == "trialing" %>
  <p>Your trial subscription will run until <%= Time.at(@trial_ends).strftime("%A, %B %d, %Y at %I:%M %p") %>.</p>
<% else %>  
  <p>Your paid subscription will renew on <%= Time.at(@current_period_ends).strftime("%A, %B %d, %Y") %>. </p>
<% end %>

<button class="btn btn-default">
  <%= link_to 'Cancel Subscription', "/charges/" + @id.to_s, method: :delete %>
</button>   
